<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#068BCA"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/calculator"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1Id"
        android:textColor="@color/white"
        android:hint="Enter Number 1"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:inputType="numberDecimal"

        android:backgroundTint="@color/white"
        android:textCursorDrawable="@null"
        />
    <EditText
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2Id"
        android:textColor="@color/white"
        android:hint="Enter Number 2"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:inputType="numberDecimal"

        android:backgroundTint="@color/white"
        android:textCursorDrawable="@null"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="+"
            android:id="@+id/addButtonId"
            android:layout_marginRight="20dp"
            android:textSize="24sp"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="-"
            android:id="@+id/subButtonId"
            android:textSize="24sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="*"
            android:id="@+id/mulButtonId"
            android:layout_marginRight="20dp"
            android:textSize="24sp"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="/"
            android:id="@+id/divButtonId"
            android:textSize="24sp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultTextViewId"
        android:textStyle="bold"
        android:textSize="18sp"
        />

</LinearLayout>